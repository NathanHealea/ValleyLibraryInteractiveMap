<!DOCTYPE html>
<html lang="ab">
<head>
    {{> head }}

    <!-- Map dispaly CSS !-->
    <link rel="stylesheet" type="text/css" href="/public/stylesheets/map-display.css"/>
</head>

<body>
    <div id="wrapper">
        {{> nav }}
        {{> dashboard/sidebar }}

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">

                <!-- Page title !-->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Room Location Form</h1>
                        <p>Rooms are fixed structures in the Library such as study rooms, classrooms, offices, etc. </p>
                    </div> <!-- /.col-lg-12 -->
                </div> <!-- /.row -->

                <!-- Form !-->
                <div class="row">
                    <div class="col-lg-12">

                        <form href="room" method="POST" role="form">

                            <!-- Name & Floor !-->
                            <div class="row">

                                <!-- Location name input !-->
                                <div class="col-lg-6">
                                    <div class="form-group" id="name-group">
                                        <label for="name">Location Name</label>
                                        <input type="text" id="name" name="name" class="form-control"
                                        placeholder="location name"
                                        autofocus>
                                        <p class="help-block">Enter the name of the location being created.</p>
                                        <span id="nameError" class="help-block"></span>
                                    </div>
                                </div> <!-- / .col-lg-6 !-->

                                <!-- Floor input !-->
                                <div class="col-lg-3">
                                    <div class="form-group" id="floor-group">
                                        <label for="floor">Floor</label>
                                        <select id="floor" name="floor" class="form-control" autofocus > 
                                            <option value=1>1</option>
                                            <option value=2>2</option>
                                            <option value=3>3</option>
                                            <option value=4>4</option>
                                            <option value=5>5</option>
                                            <option value=6>6</option>
                                        </select>
                                        <p class="help-block">Enter the floor where location is located.</p>
                                        <span id="floorError" class="help-block"></span>
                                    </div>
                                </div> <!-- / .col-lg-3 !-->

                                <!-- dispay Optison input !-->
                                <div class="col-lg-3">
                                    <div class="row" >
                                        <div class="col-lg-12">
                                            <div class="form-group" id="color-group">
                                                <label for="color" >Color </label>
                                                <input id="color" type="color" name="color" value="#33b5e5" style="float:right;"/>
                                                <p class="help-block">Enter the color of the locaiton.</p>
                                                <span id="colorError" class="help-block"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" >
                                        <div class="col-lg-12">
                                            <div class="from-group" id="display-group">
                                                <p class="input-label">Display Location Name </p>
                                                <label class="radio-inline"><input type="radio" id="display-true" name="display" value="true" checked="checked"> Yes</label>
                                                <label class="radio-inline"><input type="radio" id="display-false" name="display" value="false">No</label>
                                                <p class="help-block">Hide the location on map.</p>
                                                <span id="displayError" class="help-block"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- / .col-lg-3 !-->
                            </div> <!-- / Name & Floor !-->

                            <!-- Room Number & Capacity !-->
                            <div class="row">

                                <!-- Room number input !-->
                                <div class="col-lg-6">
                                    <div class="form-group" id="number-group">
                                        <label for="number">Room #</label>
                                        <input type="number" id="number" name="number" class="form-control"
                                        placeholder="ex. 201"
                                        autofocus>

                                        <p class="help-block">Enter the room number.</p>
                                    </div>
                                </div> <!-- / .col-lg-6 !-->

                                <!-- Room capacity input !-->
                                <div class="col-lg-6">
                                    <div class="form-group" id="capacity-group">
                                        <label for="capacity">Room Capacity</label>
                                        <input type="number" id="capacity" name="capacity" class="form-control"
                                        placeholder="ex. 32"
                                        autofocus>

                                        <p class="help-block">Enter the room capacity.</p>
                                    </div>
                                </div> <!-- / .col-lg-6 !-->
                            </div> <!-- / Room Number & Capacity !-->

                            <!-- Attribute & Tags !-->
                            <div class="row">

                                <!-- Attributes Input !-->
                                <div class="col-lg-6">
                                    <div class="form-group" id="attribute-group">
                                        <label for="attribute">Attribute</label>
                                        <textarea rows="5" id="attribute" name="attribute" class="form-control"
                                        placeholder="Lighting, Natural, Electrical, Socket, etc."
                                        autofocus></textarea>
                                        <p class="help-block">Enter the attributes the location contains.</p>
                                        <span id="attributeError" class="help-block"></span>
                                    </div>
                                </div> <!-- / .col-lg-6 !-->

                                <!-- Tag Input !-->
                                <div class="col-lg-6">
                                    <div class="form-group" id="tag-group">
                                        <label for="tag">Tag</label>
                                        <textarea rows="5" id="tag" name="tag" class="form-control"
                                        placeholder="Learning Corner, Circulation Desk, etc."
                                        autofocus></textarea>
                                        <p class="help-block">Enter the tag used to identify the location.</p>
                                        <span id="tagError" class="help-block"></span>
                                    </div>
                                </div> <!-- / .col-lg-6 !-->
                            </div> <!-- / Attribute & Tags !-->

                            <!-- Mark Location & Entry Point !-->
                            <div class="row">

                                <!-- Map Location Input!-->
                                <div class="col-lg-6">
                                    <div class="form-group" id="location-group">
                                        <p class="input-label">Mark Location</p>
                                        <span id="locationError" class="help-block"></span>
                                    </div>

                                    <!-- Map Control !-->
                                    <div class="row" id="map-control">

                                        <!-- Draw and select location control !-->
                                        <div class="col-lg-12">
                                            <div class="btn btn-primary" id="btn-toggle-locations">Toggle Locations</div>
                                            <div class="btn btn-default" id="btn-location-draw">Draw Location</div>
                                            <div class="btn btn-default" id="btn-box-draw">Draw By Box</div>
                                            <div class="btn btn-default" id="btn-location-select">Select Location</div>
                                            <div class="row controls hidden" id="location-draw-controls">
                                                <div class="col-lg-12">
                                                    <div class="btn btn-primary" id="btn-location-fill">Fill</div>
                                                    <div class="btn btn-warning" id="btn-location-clear">Clear</div>

                                                </div>
                                            </div>
                                        </div> <!-- /.col-lg-6 !-->
                                    </div> <!-- /.row !-->
                                </div>

                                <!-- Entry Point Input !-->
                                <div class="col-lg-6">
                                    <div class="form-group" id="entry-group">
                                        <p class="input-label">Set Entry Point</p>
                                        <span id="entryError" class="help-block"></span>
                                    </div>
                                    <div class="btn btn-default" id="btn-navigation">Set Entry Point</div>
                                    <div class="row controls hidden" id="navigation-controls">
                                        <div class="col-lg-12">
                                            <div class="btn btn-default" id="btn-navigation-show">Show Grid</div>
                                            <div class="btn btn-default" id="btn-navigation-hide">Hide Grid</div>
                                            <div class="btn btn-warning" id="btn-navigation-clear">Clear</div>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- / Mark Location & Entry Point !-->

                            <!-- Map & Grid !-->
                            <div class="form-group" id="map-group">
                                <section id="grid" style="position:absolute"></section>
				<div id="map-wrapper">

                                </div>
                            </div> <!-- / Map & Grid !-->

                            <!-- Form Control !-->
                            <p class="input-label">Form Options</p>
                            <input id="type" name="type" value="room" hidden="true"/>
                            <button type="submit" class="btn btn-success" id="btn-save">Save</button>
                            <button type="reset" class="btn btn-warning" id="btn-clear">Clear</button>
                            <button class="btn btn-danger" id="btn-cancel">Cancel</button>
                        </form>
                    </div> <!-- col-lg-12 !-->
                </div> <!-- /.row !-->


            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
        {{> footer }}
    </div>
    <!-- /#wrapper -->

    {{> dashboard/confirmationmodal }}

    {{> dashboard/javascript }}

    <!-- ApprovedJS !-->
    <script src="/approvejs/approve.min.js"></script>

    <!-- Pathfinding js-->
    <script src="/pathfinding/visual/lib/pathfinding-browser.min.js"></script>

    <!-- LodashJS !-->
    <script src="/lodash/lodash.js"></script>

    <!-- Draw Polygons js !-->
    <script src="/public/javascripts/draw-polygon.js"></script>

    <!-- Navigation Controls !-->
    <script src="/public/javascripts/navigation-main.js"></script>

    <!-- Form Controls JS !-->
    <script src="/public/javascripts/control-form.js" ></script>

    <script>
        var data = {{{data}}}
        var locationOBJ  = null;
        if( data != null){
            locationOBJ = data;

            loadLocation(locationOBJ);

        }

    </script>



</body>
