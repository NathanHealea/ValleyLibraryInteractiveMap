<!DOCTYPE html>
<html lang="ab">
<head>
    {{> head }}

    <!-- Map dispaly CSS !-->
    <link rel="stylesheet" type="text/css" href="/public/stylesheets/map-display.css"/>
</head>

<body>
    <div id="wrapper">
        {{> nav }}
        {{> dashboard/sidebar }}

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">

                <!-- Page title !-->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Map Upload Form</h1>
                        <p>Upload New Maps</p>
                    </div> <!-- /.col-lg-12 -->
                </div> <!-- /.row -->

                <!-- Form !-->
                <div class="row">
                    <div class="col-lg-12">

                         <form ref='uploadForm' 
                          id='uploadForm' 
                          action='http://localhost:3000/mapUpload' 
                          method='post' 
                          encType="multipart/form-data">
                            Choose Floor Number: <input type="number" name="floorNum" />
                             <br>
                            Select File to Upload: <input type="file" name="newSVGMap" />
                            <input type='submit' value='Upload!' />
                          </form>   
                        
                        
                      
                   </div> <!-- /.row !-->


               </div>
               <!-- /.container-fluid -->
           </div>
       </div>
       <!-- /#page-wrapper -->
       {{> footer }}
   </div>
   <!-- /#wrapper -->

   {{> dashboard/confirmationmodal }}


   {{> dashboard/javascript }}

   <!-- ApprovedJS !-->
   <script src="/approvejs/approve.min.js"></script>

   <!-- Pathfinding js-->
   <script src="/pathfinding/visual/lib/pathfinding-browser.min.js"></script>

   <!-- LodashJS !-->
   <script src="/lodash/lodash.js"></script>

   <!-- Draw Polygons js !-->
   <script src="/public/javascripts/draw-polygon.js"></script>

   <!-- Navigation Controls !-->
   <script src="/public/javascripts/navigation-main.js"></script>

   <!-- Form Controls JS !-->
   <script src="/public/javascripts/control-mapUpload.js" ></script>


</body>